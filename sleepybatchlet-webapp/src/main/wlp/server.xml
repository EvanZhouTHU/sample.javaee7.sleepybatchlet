<server description="SleepyBatchlet Sample">

    <featureManager>
        <feature>jsp-2.3</feature>
        <feature>batch-1.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080">
        <tcpOptions soReuseAddr="true"/>
    </httpEndpoint>

    <application name="sample.javaee7.sleepybatchlet" context-root="/sample.javaee7.sleepybatchlet" location="${appLocation}" type="war">
    </application>

</server>
